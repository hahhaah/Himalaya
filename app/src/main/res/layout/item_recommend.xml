<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_item_bg"
    android:layout_height="75dp">

    <com.example.himalaya.views.RoundRectImageView
        android:scaleType="fitXY"
        android:id="@+id/album_cover"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album_cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/album_title_tv"
            android:text="那普伦收到货覅"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textColor="#000303"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/album_subTitle_tv"
            android:lines="1"
            android:ellipsize="end"
            android:text="为你开启成功之路回溯湖出发ID是,意气相得"
            android:textSize="13sp"
            android:textColor="#787878"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/play"
                android:layout_width="7dp"
                android:layout_height="7dp" />

            <TextView
                android:id="@+id/view_counts_tv"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:text="234.5万"
                android:textColor="#ff848484"
                android:textSize="8sp" />

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/sound"
                android:layout_width="7dp"
                android:layout_height="7dp" />

            <TextView
                android:id="@+id/content_size_tv"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:text="23集"
                android:textColor="#ff848484"
                android:textSize="8sp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>